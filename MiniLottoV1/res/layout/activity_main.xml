<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/android_back_main"
    tools:context="com.minilotto.MainActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/editPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editUsername"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="12"
        android:hint="Password"
        android:textColor="#f5f7fa"
        android:textColorHint="#b2b6bb" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#eff3f7"
        android:ems="12"
        android:text="Register"
        android:textColor="#29405b" />

    <EditText
        android:id="@+id/editUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editPassword"
        android:layout_marginTop="200dp"
        android:ems="12"
        android:hint="Username"
        android:textColor="#f5f7fa"
        android:textColorHint="#b2b6bb" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnRegister"
        android:layout_below="@+id/editPassword"
        android:layout_marginTop="37dp"
        android:background="#eff3f7"
        android:ems="12"
        android:text="Login"
        android:textColor="#29405b" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>